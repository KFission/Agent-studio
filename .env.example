# JAI Agent OS — Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# GCP CONFIGURATION
# =============================================================================
GCP_PROJECT_ID=gcp-jai-platform-dev
ENVIRONMENT=dev
REGION=us-central1

# =============================================================================
# JAGGAER API CONFIGURATION
# =============================================================================
JAGGAER_BASE_URL=https://premajor.app11.jaggaer.com/arc/api
JAGGAER_API_KEY=your-jaggaer-api-key
JAGGAER_TENANT_ID=default
JAGGAER_ORIGINATION=agent-studio

# =============================================================================
# LLM PROVIDERS (configure the ones you want to use)
# =============================================================================

# Google Gemini — uses Application Default Credentials (ADC)
# Run: gcloud auth application-default login

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Ollama (local models: Gemma, Kimi, Llama, Qwen)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# LANGSMITH OBSERVABILITY
# =============================================================================
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=agent-studio

# =============================================================================
# LANGFUSE OBSERVABILITY (self-hosted via docker-compose)
# =============================================================================
# After first launch, create a project in Langfuse UI at http://localhost:3030
# Then generate API keys and paste them here.
LANGFUSE_HOST=http://localhost:3030
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
# Langfuse server secrets (used by the langfuse docker container)
LANGFUSE_NEXTAUTH_SECRET=mysecretkey-change-in-production
LANGFUSE_SALT=mysalt-change-in-production

# =============================================================================
# INFRASTRUCTURE
# =============================================================================
REDIS_URL=redis://localhost:6379/0
DATABASE_URL=postgresql+asyncpg://langfuse:langfuse@localhost:5433/agent_studio
# Fernet key for encrypting credentials at rest. Generate with:
#   python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# =============================================================================
# CHANNELS
# =============================================================================
WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# KEYCLOAK IDP (User Management & SSO)
# =============================================================================
KEYCLOAK_SERVER_URL=http://localhost:8180
KEYCLOAK_REALM=jai-agent-os
KEYCLOAK_CLIENT_ID=jai-agent-os-api
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# =============================================================================
# GUARDRAILS AI (https://hub.guardrailsai.com)
# =============================================================================
GUARDRAILS_TOKEN=your-guardrails-hub-token
GUARDRAILS_API_URL=http://guardrails:8000
